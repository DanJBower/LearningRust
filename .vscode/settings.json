{
    "[git-commit]": {
        "editor.rulers": [
            {
                "color": "#007a41",
                "column": 50
            },
            {
                "color": "#ad1a00",
                "column": 72
            }
        ],
        "editor.wordWrap": "off"
    },
    "cSpell.words": [],
    "debug.console.collapseIdenticalLines": false,
    "diffviewer.drawFileList": false,
    "diffviewer.outputFormat": "side-by-side",
    "terminal.integrated.scrollback": 1000000,
    "editor.bracketPairColorization.enabled": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "explorer.compactFolders": false,
    "files.autoSave": "onFocusChange",
    "files.exclude": {
        "**/.vs": true,
        "**/bin": true,
        "**/obj": true
    },
    "files.insertFinalNewline": true,
    "markdownlint.config": {
        "default": true,
        "no-inline-html": false
    },
    "scm.defaultViewMode": "tree",
    "todohighlight.isEnable": false,
    "todo-tree.general.tags": [
        "WARN",
        "FIXME",
        "TODO"
    ],
    "todo-tree.highlights.customHighlight": {
        "FIXME": {
            "background": "#b80505",
            "foreground": "#ffffff",
            "gutterIcon": true,
            "iconColour": "#ffd000",
            "type": "tag",
        },
        "TODO": {
            "background": "#d36b03",
            "foreground": "#ffffff",
            "gutterIcon": true,
            "icon": "check",
            "iconColour": "#3cff00",
            "type": "tag",
        },
        "WARN": {
            "background": "#860303",
            "foreground": "#ffffff",
            "gutterIcon": true,
            "icon": "alert",
            "iconColour": "#ff0000",
            "type": "tag",
        }
    },
    "trailing-spaces.trimOnSave": true
}
